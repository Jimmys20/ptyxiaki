@page
@model ptyxiaki.Pages.Categories.IndexModel

@{
  ViewData["Title"] = "Κατηγορίες";
}

<h1>@ViewData["Title"]</h1>

<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.categories[0].title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.categories[0].description)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.categories)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.categoryId">Edit</a> |
          <a asp-page="./Delete" asp-route-id="@item.categoryId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
