        {
          <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Account">Login</a></li>
        }
        else
        {
          <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a></li>
        }
        <li class="nav-item"><a class="nav-link">@User.Identity.IsAuthenticated</a></li>
        <li class="nav-item"><a class="nav-link">@User.FindFirst(c => c.Type == "am")?.Value</a></li>
