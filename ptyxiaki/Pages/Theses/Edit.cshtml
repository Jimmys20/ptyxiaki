@page
@model ptyxiaki.Pages.Theses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Thesis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Thesis.thesisId" />
            <div class="form-group">
                <label asp-for="Thesis.title" class="control-label"></label>
                <input asp-for="Thesis.title" class="form-control" />
                <span asp-validation-for="Thesis.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thesis.description" class="control-label"></label>
                <input asp-for="Thesis.description" class="form-control" />
                <span asp-validation-for="Thesis.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thesis.professorId" class="control-label"></label>
                <select asp-for="Thesis.professorId" class="form-control" asp-items="ViewBag.professorId"></select>
                <span asp-validation-for="Thesis.professorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
