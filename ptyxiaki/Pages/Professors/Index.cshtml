@page
@model ptyxiaki.Pages.Professors.IndexModel

@{
  ViewData["Title"] = "Καθηγητές";
}

<h1>@ViewData["Title"]</h1>

<table id="professors" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%;">
  <thead>
    <tr>
      <th></th>
      <th>
        @Html.DisplayNameFor(model => model.professors[0].fullName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.professors[0].email)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.professors[0].website)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.professors[0].phone)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.professors[0].office)
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.professors)
    {
      <tr>
        <td></td>
        <td>
          <a asp-page="/Professors/Details" asp-route-id="@item.professorId">@Html.DisplayFor(modelItem => item.fullName)</a>
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.website)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.office)
        </td>
      </tr>
    }
  </tbody>
</table>

@section Scripts {
  <script>
    $(function () {
      $('#professors').DataTable({
        columnDefs: [{
          className: 'control',
          orderable: false,
          targets: 0
        }, {
          orderable: false,
          targets: '_all'
        }],
        info: false,
        order: [1, 'asc'],
        paging: false,
        responsive: {
          details: {
            type: 'column'
          }
        },
        searching: true
      });
    });
  </script>
}
