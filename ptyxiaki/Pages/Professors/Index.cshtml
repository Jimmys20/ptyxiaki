@model ptyxiaki.Pages.Professors.IndexModel

@{
  ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].oAuthId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].firstName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].lastName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].place)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].time)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].phone)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].fax)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Professor[0].email)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Professor)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.oAuthId)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.place)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.fax)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.professorId">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.professorId">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.professorId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
